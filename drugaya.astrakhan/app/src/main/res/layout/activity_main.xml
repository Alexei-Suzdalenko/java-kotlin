<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayoutGeneral"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/woman">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
          <LinearLayout
              android:layout_marginTop="4dp"
              android:weightSum="4"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <ImageView
                  android:layout_weight="1"
                  android:tint="@color/blue"
                  android:contentDescription="@string/app_name"
                  android:src="@drawable/play"
                  android:id="@+id/play"
                  android:layout_width="0dp"
                  android:layout_height="51dp"/>
              <ImageView
                  android:visibility="gone"
                  android:layout_weight="1"
                  android:tint="@color/blue"
                  android:contentDescription="@string/app_name"
                  android:src="@drawable/stop"
                  android:id="@+id/stop"
                  android:layout_width="0dp"
                  android:layout_height="51dp"/>
              <ImageView
                  android:layout_weight="1"
                  android:tint="@color/blue"
                  android:contentDescription="@string/app_name"
                  android:src="@drawable/web"
                  android:id="@+id/web"
                  android:layout_width="0dp"
                  android:layout_height="51dp"/>
              <ImageView
                  android:layout_weight="1"
                  android:tint="@color/blue"
                  android:contentDescription="@string/app_name"
                  android:src="@drawable/value"
                  android:id="@+id/value"
                  android:layout_width="0dp"
                  android:layout_height="51dp"/>
              <ImageView
                  android:layout_weight="1"
                  android:tint="@color/blue"
                  android:contentDescription="@string/app_name"
                  android:src="@drawable/share"
                  android:id="@+id/share"
                  android:layout_width="0dp"
                  android:layout_height="51dp"/>
          </LinearLayout>
        <ListView
            android:layout_marginTop="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:divider="@null"
            android:dividerHeight="7dp"
            android:id="@+id/mainListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

         <LinearLayout
             android:layout_marginTop="33dp"
             android:layout_marginStart="32dp"
             android:layout_marginEnd="32dp"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <TextView
                 android:layout_weight="1"
                 android:text="@string/kasparov"
                 android:gravity="center"
                 android:padding="11dp"
                 android:background="@color/colorPrimary"
                 android:textColor="@android:color/white"
                 android:textSize="21sp"
                 android:id="@+id/kasparov"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" />
             <TextView
                 android:layout_marginTop="7dp"
                 android:layout_weight="1"
                 android:text="@string/grani"
                 android:gravity="center"
                 android:padding="11dp"
                 android:background="@color/colorPrimary"
                 android:textColor="@android:color/white"
                 android:textSize="21sp"
                 android:id="@+id/grani"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                  />
         </LinearLayout>

    </LinearLayout>





    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-1208057699352262/1838605099"
        >
    </com.google.android.gms.ads.AdView>


</RelativeLayout>