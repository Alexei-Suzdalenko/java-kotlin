<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientDetail"
    android:backgroundTint="@android:color/white">


    <androidx.cardview.widget.CardView
        android:layout_marginStart="11dp"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="11dp"
        android:backgroundTint="@android:color/white"
        app:cardElevation="5dp"
        android:clickable="false"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="346346"
                />
            </com.google.android.material.textfield.TextInputLayout>
            -->
            <LinearLayout
                android:layout_marginTop="11dp"
                android:layout_marginBottom="11dp"
                android:padding="7dp"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/clear_all_items_client"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="7dp"
                    android:textStyle="bold"
                    android:text="@string/clear_all_items"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:padding="11dp"
                android:textSize="18sp"
                android:text="@string/client_company_name"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/company_name_client"
                android:layout_marginEnd="11dp"
                android:layout_marginStart="11dp"
                android:padding="11dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:autofillHints=""
                tools:ignore="LabelFor" />
            <TextView
                android:layout_marginTop="22dp"
                android:padding="11dp"
                android:textSize="18sp"
                android:text="@string/bill_to"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:maxLines="5"
                android:autofillHints=""
                tools:ignore="LabelFor"
                android:inputType="textMultiLine"
                android:id="@+id/bill_to_client"
                android:layout_marginEnd="11dp"
                android:layout_marginStart="11dp"
                android:padding="11dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="22dp"
                android:padding="11dp"
                android:textSize="18sp"
                android:text="@string/address_client"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:maxLines="5"
                android:inputType="textMultiLine"
                android:autofillHints=""
                tools:ignore="LabelFor"
                android:id="@+id/address_client"
                android:layout_marginEnd="11dp"
                android:layout_marginStart="11dp"
                android:padding="11dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="32dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/city_client"
                    android:inputType="text"
                    android:autofillHints=""
                    tools:ignore="LabelFor"
                    android:layout_weight="1"
                    android:hint="@string/city"
                    android:layout_marginEnd="11dp"
                    android:layout_marginStart="11dp"
                    android:padding="11dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/state_client"
                    android:inputType="text"
                    android:autofillHints=""
                    tools:ignore="LabelFor"
                    android:layout_weight="1"
                    android:hint="@string/state"
                    android:layout_marginEnd="11dp"
                    android:layout_marginStart="11dp"
                    android:padding="11dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="32dp"
                android:layout_marginTop="32dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/country_client"
                    android:inputType="text"
                    android:autofillHints=""
                    tools:ignore="LabelFor"
                    android:layout_weight="1"
                    android:hint="@string/country"
                    android:layout_marginEnd="11dp"
                    android:layout_marginStart="11dp"
                    android:padding="11dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/zip_client"
                    android:inputType="text"
                    android:autofillHints=""
                    tools:ignore="LabelFor"
                    android:layout_weight="1"
                    android:hint="@string/zip"
                    android:layout_marginEnd="11dp"
                    android:layout_marginStart="11dp"
                    android:padding="11dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>